<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="icu.junyao.crm.workbench.dao.ActivityRemarkDao">
    <select id="getCountByActivityIds" resultType="int">
        select count(*) from tbl_activity_remark
        where activityId in
        <foreach collection="array" item="activityId" open="(" close=")" separator=",">
            #{activityId}
        </foreach>
    </select>
    <delete id="deleteByActivityIds">
        delete from tbl_activity_remark
        where activityId in
        <foreach collection="array" item="activityId" open="(" close=")" separator=",">
            #{activityId}
        </foreach>
    </delete>
</mapper>